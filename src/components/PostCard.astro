---
import { Image } from "astro:assets";

const { post } = Astro.props;
---

<article class="relative">
  {
    post.data.cover && (
      <Image
        inferSize
        src={post.data.cover}
        alt=""
        widths={[200, 400, 600, 1000, 1400]}
        sizes="100vw"
        class="rounded-2xl aspect-[16/9] object-cover border-8 border-border"
      />
    )
  }
  <div class="mt-4">
    <h2 class="text-2xl font-headings text-text mt-3 px-2">
      <a class="after:absolute after:inset-0" href={`/posts/${post.id}/`}>
        {post.data.title}
      </a>
    </h2>
    <!-- <span class="inline-block -translate-y-0.5">
      {post.data.properties.tags.map((tag: string) => <Tag tag={tag} />)}
    </span> -->
  </div>
</article>
